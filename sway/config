# sway config

# Variables

# movement
set $left h
set $down j
set $up k
set $right l

# colors
set $normbg #130d07
set $normfg #ecd67d

## Workspaces

set $ws0 0
set $ws1 1
set $ws2 2
set $ws3 3
set $ws4 4
set $ws5 5
set $ws6 6
set $ws7 7
set $ws8 8
set $ws9 9:vms

# Defaults
set $mod Mod1
set $term st

font pango:DejaVu Sans Mono 9

# Management
floating_modifier $mod normal

bindsym $mod+f fullscreen
bindsym $mod+Shift+c kill
bindsym $mod+Shift+r reload
bindsym $mod+Shift+e exit
bindsym $mod+Shift+q exit
bindsym $mod+Control+r restart
bindsym $mod+Shift+r reload

# Movement

## Window movement
bindsym $mod+$left focus left
bindsym $mod+$down focus down
bindsym $mod+$up focus up
bindsym $mod+$right focus right
bindsym $mod+a focus parent

bindsym $mod+Shift+$left move left
bindsym $mod+Shift+$down move down
bindsym $mod+Shift+$up move up
bindsym $mod+Shift+$right move right

## Workspace movement
bindsym $mod+0 workspace $ws0
bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+8 workspace $ws8
bindsym $mod+9 workspace $ws9

bindsym $mod+Shift+0 move container to workspace $ws0
bindsym $mod+Shift+1 move container to workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6
bindsym $mod+Shift+7 move container to workspace $ws7
bindsym $mod+Shift+8 move container to workspace $ws8
bindsym $mod+Shift+9 move container to workspace $ws9

bindsym $mod+Shift+Tab exec aworkspace move

# Usefull modes
mode "window" {
    bindsym $mod+s split v; move "default"
    bindsym $mod+h split h; move "default"

    # return to default mode
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+w mode "window"
bindsym $mod+Shift+backslash split h
bindsym $mod+minus split v

mode "resize" {
    bindsym $left resize shrink width 10 px or 10 ppt
    bindsym $down resize grow height 10 px or 10 ppt
    bindsym $up resize shrink height 10 px or 10 ppt
    bindsym $right resize grow width 10 px or 10 ppt

    # return to default mode
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+r mode "resize"

# Layouts
bindsym $mod+comma layout stacking
bindsym $mod+period layout tabbed
bindsym $mod+slash layout toggle split
bindsym $mod+apostrophe layout auto_left
bindsym $mod+semicolon layout auto next
bindsym $mod+Control+v layout splitv
bindsym $mod+Control+h layout splith

# Toggle floating
bindsym $mod+Shift+f floating toggle

# Swap between floating and tiling windows
bindsym $mod+space focus mode_togle

# Screengrab
# TODO

# Scratchpad
bindsym $mod+Shift+t move scratchpad
bindsym $mod+t scratchpad show

# Border styles
bindsym $mod+b border toggle

# Basic Apps
set $menu rofi -show run

bindsym $mod+Return exec urxvt
bindsym $mod+Shift+Return exec $term

bindsym $mod+d exec $menu
bindsym $mod+p exec $menu

bindsym $mod+x exec swaylock -c "000000cc"

# Default colors
client.focused          $normfg $normfg $normbg $normfg   $normfg
client.focused_inactive $normbg $normbg $normfg $normbg   $normbg
client.unfocused        $normbg $normbg $normfg $normbg   $normbg
client.urgent           $normfg $normfg $normbg $normfg   $normfg
client.placeholder      $normbg $normbg $normfg $normbg   $normbg
client.background       $normfg

focus_follows_mouse no

#border normal
default_border pixel 1

for_window [class="Conky"] floating enable
for_window [class="Conky"] sticky enable

bar {
    position top
    font pango:Inconsolata 10
    separator_symbol ":|:"
    colors {
        statusline $normfg
        background $normbg
        separator #303030
        inactive_workspace $normbg $normbg $normfg
        focused_workspace #202020 $normfg $normbg
    }
}

gaps outer 5
gaps inner 5

include /etc/sway/config.d/*
include ~/.config/sway/config.d/*
