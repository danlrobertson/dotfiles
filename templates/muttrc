folder-hook personal/* source "gpg2 -dq ~/.mutt/accounts/personal.gpg |"
folder-hook anidata/*  source "gpg2 -dq ~/.mutt/accounts/anidata.gpg |"
source "gpg2 -dq ~/.mutt/accounts/personal.gpg |"
set move=no

# Cache Directories
set header_cache = "~/.mutt/cache/headers"
set message_cachedir = "~/.mutt/cache/bodies"
set certificate_file = "~/.mutt/certificates"

# Sorting
set sort_aux=last-date-received
set sort=threads
set sort_re
set sort_alias=alias     # sort aliases in alpha order by alias name
set auto_tag = yes
hdr_order Date: From: To: Cc: Reply-To: Subject:

# Other
set move = no
set imap_keepalive = 900
set markers
set smart_wrap
set pager_context=3
set status_on_top
push <show-version>
set quit

# Editor
set editor = "vi -c 'set spell spelllang=en'"
set edit_headers

# GPG Settings
source ~/.gpg.rc
set pgp_use_gpg_agent = yes
set pgp_sign_as = $SIGNKEY
set pgp_timeout = 3600
set crypt_autosign = yes
set crypt_replyencrypt = yes

bind pager k previous-line
bind pager j next-line
bind index <Return> display-message

# Keybindings
bind editor <space> noop
bind index,pager d delete-message

# Macros
macro index,pager <f1> "<sync-mailbox><enter-command>source \"gpg2 -dq ~/.mutt/accounts/personal.gpg |\"<enter><change-folder>!<enter>"
macro index,pager <f2> "<sync-mailbox><enter-command>source \"gpg2 -dq ~/.mutt/accounts/anidata.gpg |\"<enter><change-folder>!<enter>"

# Colors
#     Area       FG           BG      Status
color normal     red          default
color attachment brightyellow default
color index      brightred    default "~N"
color status	 yellow       default
color tree       magenta      default
